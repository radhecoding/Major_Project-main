<%layout("/layouts/boilerplates.ejs")-%>
<body>
    <h1>Enter Detail:</h1>
    <div class="row mt-3">
        <div class="col-6 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy title" required>
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Title Should be Valid</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="listing[description]" type="text" class="form-control" placeholder="About" required></textarea>
            <div class="invalid-feedback">Description Should be Short</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Enter URL</label>
            <input name="listing[image]" type="String" class="form-control" placeholder="image link">
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" placeholder="image link" required>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input name="listing[price]" class="form-control" placeholder="1200" required>
                    <div class="invalid-feedback">Price Should be Valid</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="country" class="form-label">Country:</label>
                       <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
                       <div class="invalid-feedback">Country Name Should be Valid</div>
                </div>
               
            </div>
        </div>
       
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input name="listing[location]" type="text" class="form-control" placeholder="Bihar"  required>
            <div class="invalid-feedback">Location Should be Valid</div>
        </div>
        <button class="btn btn-dark addbtn mt-3">Submit!</button>
    </form> 
  
</div>
</div>  
</body>
